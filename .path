#!/usr/bin/env bash

export PATH=/usr/local/bin:/usr/local/sbin:$PATH

[[ -f /opt/homebrew/bin/brew ]] && eval "$(/opt/homebrew/bin/brew shellenv)"
[[ -n $(command -v brew) ]] && eval "$(brew shellenv)"

# CoreUtils
if [[ -n $(command -v brew) ]] && [[ -d "${HOMEBREW_PREFIX}/opt/libexec/gnubin" ]]; then
  export PATH="${HOMEBREW_PREFIX}/opt/libexec/gnubin${PATH+:$PATH}"
  export MANPATH="${HOMEBREW_PREFIX}/opt/libexec/gnuman${MANPATH+:$MANPATH}"
fi

[[ -n $(command -v brew) ]] && [[ -s $HOMEBREW_PREFIX/opt/mono/bin ]] && export PATH=${PATH+$PATH:}$HOMEBREW_PREFIX/opt/mono/bin
[[ -s $HOME/.composer/vendor/bin ]] && export PATH=${PATH+$PATH:}$HOME/.composer/vendor/bin


